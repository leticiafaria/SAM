<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="25dp">


    <EditText
        android:id="@+id/etNomeLembrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:contentDescription="Digite o nome do lembrete"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvNomeMedicamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeLembrete"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvNomeLembrete"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvNomeMedicamento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="@+id/etNomeLembrete"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Nome do lembrete" />

    <TextView
        android:id="@+id/tvNomeMedicamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:text="@string/nome_medicamento"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etNomeLembrete"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNomeMedicamento"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="21dp"
        android:contentDescription="Digite o nome do medicamento"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/tvQtd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvNomeMedicamento"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvQtd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="33dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:text="@string/quant"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tvDosagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNomeMedicamento" />

    <TextView
        android:id="@+id/tvDosagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="4dp"
        android:text="@string/dosagem"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tvTipo"
        app:layout_constraintStart_toEndOf="@+id/tvQtd"
        app:layout_constraintTop_toBottomOf="@+id/etNomeMedicamento" />


    <EditText
        android:id="@+id/etQtd"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:contentDescription="Digite a quantidade de medicamento"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tvIntervalo"
        app:layout_constraintEnd_toStartOf="@+id/etDosagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQtd" />

    <EditText
        android:id="@+id/etDosagem"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="55dp"
        android:contentDescription="Digite a dosagem do medicamento"
        android:ems="10"
        android:inputType="text|number"
        app:layout_constraintBottom_toTopOf="@+id/tvIntervalo"
        app:layout_constraintEnd_toStartOf="@+id/spinnerTipo"
        app:layout_constraintStart_toEndOf="@+id/etQtd"
        app:layout_constraintTop_toTopOf="@+id/etNomeMedicamento"
        app:layout_constraintVertical_bias="0.428" />

    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="4dp"
        android:text="@string/tipo"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/ivTipo"
        app:layout_constraintStart_toEndOf="@+id/tvDosagem"
        app:layout_constraintTop_toBottomOf="@+id/etNomeMedicamento" />

    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="162dp"
        android:layout_marginRight="162dp"
        android:layout_marginTop="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivTipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etDosagem"
        app:layout_constraintTop_toTopOf="@+id/tvTipo"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ivTipo"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="43dp"
        android:contentDescription="@string/tipo_do_medicamento"
        app:layout_constraintBottom_toTopOf="@+id/stTipoIntervalo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvTipo"
        app:layout_constraintTop_toTopOf="@+id/etNomeMedicamento"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvIntervalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="224dp"
        android:text="@string/intervalo_entre_doses"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/skIntervalo"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:max="24"
        android:progress="1"
        app:layout_constraintBottom_toTopOf="@+id/tvIntervaloSelecionado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stTipoIntervalo" />

    <TextView
        android:id="@+id/tvIntervaloSelecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/intervalo"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/tvHorarioDose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvHorarioDose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/hor_rio_primeira_dose"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="368dp" />

    <TextView
        android:id="@+id/tvDataInicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="218dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="112dp"
        android:text="@string/data_in_cio"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skIntervalo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvHorarioDosagemSelecione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:contentDescription="Selecione o horário da primeira dose"
        android:text="@string/selecione"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHorarioDose"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvDataInicioSelecione"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Selecione a data inicial"
        android:text="@string/selecione"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDataInicio" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="94dp"
        android:layout_height="23dp"
        android:layout_marginBottom="218dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="112dp"
        android:text="@string/data_t_rmino"
        android:textColor="@color/colorTextView"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTipo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvDataTerminoSelecione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="196dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="Selecione a data final"
        android:text="@string/selecione"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.938"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView15"
        app:layout_constraintVertical_bias="0.882" />

    <Switch
        android:id="@+id/stTipoIntervalo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="@string/diariamente"
        android:textColor="@color/colorGrayText"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvIntervalo" />

    <Button
        android:id="@+id/btAdicionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Adicionar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHorarioDosagemSelecione"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>